{
  "name": "@nlxio/management-ui-e2e-tests",
  "version": "0.0.0",
  "scripts": {
    "pretest:browserstack": "node outputUrl.js",
    "pretest:local": "node outputUrl.js",
    "test": "if test -n \"$CI\"; then npm run test:browserstack; else npm run test:local; fi",
    "test:browserstack": "testcafe 'browserstack:firefox,browserstack:chrome,browserstack:safari,browserstack:ie,browserstack:edge' --reporter 'spec,html:./test-results/index.html'",
    "test:local": "testcafe 'chrome:headless' -c 4 --live --reporter 'spec,html:./test-results/index.html'"
  },
  "devDependencies": {
    "axe-core": "3.5.4",
    "axe-testcafe": "3.0.0",
    "testcafe": "1.8.4",
    "testcafe-browser-provider-browserstack": "1.12.0",
    "testcafe-react-selectors": "4.0.0",
    "testcafe-reporter-html": "1.4.6"
  }
}
