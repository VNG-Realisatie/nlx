{
  "extends": [
    "config:base",
    ":semanticCommits",
    ":semanticCommitTypeAll(build)",
    ":semanticCommitScopeDisabled",
    "schedule:nonOfficeHours",
    "group:allNonMajor"
  ],
  "postUpdateOptions": [
    "gomodTidy"
  ],
  "ignoreDeps": [
    "github.com/coreos/etcd"
  ],
  "masterIssue": true,
  "gomod": {
    "major": {
      "masterIssueApproval": true
    }
  },
  "packageRules": [
    {
      "groupName": "docusaurus packages",
      "paths": ["docs/**"],
      "packagePatterns": ["^@docusaurus/"],
      "allowedVersions": "2.0.0-alpha.36"
    },
    {
      "groupName": "etcd fails with grpc >= 1.27.0",
      "managers": ["gomod"],
      "packageNames": ["google.golang.org/grpc"],
      "allowedVersions": "<1.27.0"
    }
  ]
}
