{
  "extends": [
    "config:base",
    ":semanticCommits",
    ":semanticCommitTypeAll(build)",
    ":semanticCommitScopeDisabled",
    "schedule:nonOfficeHours"
  ],
  "automergeType": "pr",
  "automerge": true,
  "dependencyDashboard": true,
  "gitLabIgnoreApprovals": true,
  "rangeStrategy": "pin",
  "postUpdateOptions": [
    "gomodTidy"
  ],
  "gitlabci": {
    "fileMatch": [
      "^\\.gitlab/ci/.*\\.yml$"
    ]
  },
  "ignoreDeps": [],
  "packageRules": [
    {
      "groupName": "directory-ui is still using react-router v5, which uses an older version of history",
      "packageNames": ["history"],
      "managers": ["npm"],
      "allowedVersions": "<5.0.0"
    },
    {
      "groupName": "styled-components@5.2.0 introduced breaking behaviour https://github.com/styled-components/styled-components/issues/3273",
      "packageNames": ["styled-components"],
      "managers": ["npm"],
      "allowedVersions": "<5.2.0"
    },
    {
      "groupName": "used for E2E-tests. more recent versions only support ESM which causes issues while importing into TypeScript",
      "packageNames": ["p-wait-for"],
      "managers": ["npm"],
      "allowedVersions": "3.2.0"
    },
    {
      "groupName": "support for updating Helms Chart.lock files is missing https://github.com/renovatebot/renovate/issues/6877",
      "datasources": ["helm"],
      "enabled": false
    },
    {
      "groupName": "redoc and peers - wait for full release of v2.0",
      "paths": ["directory-ui/**"],
      "packageNames": ["redoc", "mobx", "core-js"],
      "enabled": false
    }
  ]
}
